rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- OPTIMIZED HELPER FUNCTIONS (Using Custom Claims) ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // Checks the "VIP Badge" on the token (Fast & Free)
    function isFamilyMember(familyId) {
      return isAuthenticated() && request.auth.token.familyId == familyId;
    }
    
    function isParent() {
      return isAuthenticated() && request.auth.token.role == "parent";
    }
    
    function isParentInFamily(familyId) {
      return isFamilyMember(familyId) && isParent();
    }

    // --- User Profiles ---
    match /users/{userId} {
      allow read: if isAuthenticated() && 
                   (request.auth.uid == userId || isFamilyMember(resource.data.familyId));
      
      allow create: if isAuthenticated() && 
                     request.auth.uid == userId &&
                     exists(/databases/$(database)/documents/allowlist/$(request.resource.data.email));
      
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // --- Family Data ---
    match /families/{familyId} {
      // Allow read if you have the badge OR if you are listed in the members array (for joining)
      allow read: if isFamilyMember(familyId) || 
                   (isAuthenticated() && resource.data.members.hasAny([request.auth.uid]));
      
      allow create: if isAuthenticated();
      
      allow update: if isParentInFamily(familyId) || 
                     (isAuthenticated() && 
                      request.resource.data.members == resource.data.members.concat(request.auth.uid) &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']));
      
      allow delete: if false;
      
      // --- Subcollections ---

      match /todos/{todoId} {
        allow read, create, update: if isFamilyMember(familyId);
        allow delete: if isParentInFamily(familyId);
      }
      
      match /chores/{choreId} {
        allow read, update: if isFamilyMember(familyId);
        allow create, delete: if isParentInFamily(familyId);
      }
      
      match /recipes/{recipeId} {
        allow read, create, update: if isFamilyMember(familyId);
        allow delete: if isParentInFamily(familyId) || resource.data.createdBy == request.auth.uid;
      }
      
      match /groceries/{groceryId} {
        allow read, write: if isFamilyMember(familyId);
      }

      match /medications/{medicationId} {
        allow read: if isFamilyMember(familyId);
        allow write: if isParentInFamily(familyId);
      }
      
      match /transactions/{transactionId} {
        allow read: if isFamilyMember(familyId);
        allow create, update, delete: if isParentInFamily(familyId); 
      }
      
      match /documents/{docId} {
        allow read, create, update: if isFamilyMember(familyId);
        allow delete: if isParentInFamily(familyId);
      }
      
      match /memories/{memoryId} {
        allow read, create, update: if isFamilyMember(familyId);
        allow delete: if isParentInFamily(familyId) || resource.data.uploadedBy == request.auth.uid;
      }

      match /folders/{folderId} {
        allow read, create, update: if isFamilyMember(familyId);
        allow delete: if isParentInFamily(familyId) || resource.data.createdBy == request.auth.uid;
      }
      
      match /calendar-events/{eventId} {
        allow read: if isFamilyMember(familyId);
        allow write: if isFamilyMember(familyId); 
      }

      match /meal-plan/{mealId} {
        allow read, create, update: if isFamilyMember(familyId);
        allow delete: if isParentInFamily(familyId) || resource.data.createdBy == request.auth.uid;
      }

      match /credentials/{credentialId} {
        allow read: if isFamilyMember(familyId);
        allow write: if isParentInFamily(familyId);
      }

      match /daily-prompts/{promptId} {
        allow read, write: if isFamilyMember(familyId);
      }

      match /daily-checkins/{checkinId} {
        allow read: if isFamilyMember(familyId);
        allow create, update: if isFamilyMember(familyId) && request.resource.data.userId == request.auth.uid;
        allow delete: if isFamilyMember(familyId) && resource.data.userId == request.auth.uid;
      }

      // --- NEW: Movie Night Rules ---
      match /movies/{movieId} {
        allow read, create, update: if isFamilyMember(familyId);
        allow delete: if isFamilyMember(familyId);
      }
    }
    
    match /allowlist/{email} {
      allow read, write: if false; 
    }

    match /app-config/{doc} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
  }
}